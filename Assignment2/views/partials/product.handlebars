<section class="product col-sm-12 col-md-6 col-lg-4">
    <div class="card" id="{{id}}">
         <img class="card-img-top" src="/public/img/{{id}}.jpg" alt="Card image cap">
        <div class="card-body">
            <h3 class="card-title">{{name}}</h3>
            <p class="card-text">{{short-description}}</p>
            <a class="btn btn-primary" data-toggle="modal" data-target="#{{id}}Modal">More Details</a>
        </div>
    </div>
    <div class="modal fade" id="{{id}}Modal" tabindex="-1" role="dialog" aria-labelledby="{{id}}ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="{{id}}ModalLabel">{{name}}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{long-description}}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</section>